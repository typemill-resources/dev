		<section>
			
			<header>
				
				<div class="logo">
					<p>
						<a href="{{ base_url }}" title="My Title">						
							{% if logo %}
								<img src="{{ logo }}" class="logo-image"/>
							{% else %}
								{{ settings.title }}
							{% endif %}
						</a>
					</p>
				</div>
			
			</header>

			<nav>
				{% include 'partials/navigation.twig' %}
			</nav>

		</section>

		<!-- You should add a widgetized area somewhere for search-plugin and other plugins -->
		<aside>

			{% if widgets %}
				<div class="widgetcontainer">
					{% for index,widget in widgets %}
					<div id="{{ index }}">
						{{ widget }}
					</div>
					{% endfor %}
				</div>
			{% endif %}

		</aside>



		{% block content %}{% endblock %}
			
		<footer>
			
			{% include 'partials/footer.twig' %}
		
		</footer>
		
		{% block javascripts %}

			<!-- you can use typemillutilities for lazy loading of youtube vides
				
				<script src="{{ base_url }}/system/author/js/typemillutils.js"></script>
				<script>typemillUtilities.start();</script>
			
			-->

			<script src="{{ base_url }}/themes/dev/js/script.js"></script>

			{{ assets.renderJS() }}
		
		{% endblock %}

	</body>
</html>